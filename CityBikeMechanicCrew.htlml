<!DOCTYPE html>
<html>
<head>
    <title>CityLife Volunteers</title>
    <style>
        /* Program Card Styles */
        .program-card {
            display: flex;
            margin: 20px 0;
            background: white;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
            overflow: hidden;
        }

        .program-image {
            flex: 0 0 40%;
            min-height: 250px;
            background: url('https://images.unsplash.com/photo-1507035895480-2b3156c31fc8') center/cover;
        }

        .program-content {
            padding: 25px;
            flex: 1;
        }

        .btn {
            padding: 10px 20px;
            background: #3498db;
            color: white;
            border: none;
            border-radius: 5px;
            cursor: pointer;
        }

        /* Modal Styles */
        .modal-overlay {
            display: none;
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0,0,0,0.5);
            z-index: 999;
        }

        .program-modal {
            display: none;
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            background: white;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.2);
            z-index: 1000;
            max-width: 600px;
            width: 90%;
        }

        .modal-close {
            position: absolute;
            top: 15px;
            right: 15px;
            cursor: pointer;
            font-size: 24px;
        }
    </style>
</head>
<body>

<!-- City Bike Program Card -->
<div class="program-card">
    <div class="program-image"></div>
    <div class="program-content">
        <h2>City Bike Mechanic Crew</h2>
        <p>Repair and maintain bicycles for low-income residents.</p>
        <button onclick="openModal('bike-modal')" class="btn">Learn More</button>
    </div>
</div>

<!-- Modal Elements -->
<div class="modal-overlay" id="modal-overlay"></div>

<!-- Bike Program Modal -->
<div id="bike-modal" class="program-modal">
    <span class="modal-close" onclick="closeModal()">Ã—</span>
    <h2>City Bike Mechanic Crew</h2>
    <p>Full program details here...</p>
    <button onclick="closeModal()" class="btn">Close</button>
</div>

<script>
// Modal Control Functions
function openModal(modalId) {
    document.getElementById('modal-overlay').style.display = 'block';
    document.getElementById(modalId).style.display = 'block';
    document.body.style.overflow = 'hidden';
}

function closeModal() {
    document.getElementById('modal-overlay').style.display = 'none';
    document.querySelectorAll('.program-modal').forEach(modal => {
        modal.style.display = 'none';
    });
    document.body.style.overflow = 'auto';
}

// Close modal when clicking outside
document.getElementById('modal-overlay').addEventListener('click', closeModal);
</script>

</body>
</html>
